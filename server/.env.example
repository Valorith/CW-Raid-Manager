# Copy this file to .env and update values as needed
NODE_ENV=development
PORT=4000
CLIENT_URL=http://localhost:5173
DATABASE_URL=mysql://user:password@localhost:3306/cw_raid_manager
SESSION_SECRET=replace-with-strong-random-string

# Google OAuth (optional - at least one OAuth provider required)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4000/api/auth/google/callback

# Discord OAuth (optional - at least one OAuth provider required)
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_CALLBACK_URL=http://localhost:4000/api/auth/discord/callback
